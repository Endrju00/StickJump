#:include pipe.kv

FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "assets/sky.png"

            Rectangle:
                size: self.width, self.height/9
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture

    Label:
        id: score
        size_hint_y: None
        height: 3*2*root.height/4
        text: "0"
        font_size: sp(40)
        color: [0, 0, 0, 1]

    Label:
        id: lifes
        size_hint_y: None
        height: root.height/9
        text: "LIFES: 2"
        font_size: sp(20)

    Button:
        background_color: (0, 0, 0, 1)
        text: "PLAY"
        font_size: sp(25)
        size_hint: 1/8, 1/13.5
        pos: root.center[0] - self.size[0]/2, root.center[1]
        id: start_button
        on_release:
            self.disabled = True
            self.opacity = 0
            app.start_game()

    Button:
        background_color: (0, 0, 0, 1)
        text: "QUIT"
        font_size: sp(25)
        size_hint: 1/8, 1/13.5
        pos: root.center[0] - self.size[0]/2, root.center[1] - self.size[1] - dp(20)
        id: quit_button
        on_release:
            app.get_running_app().stop()

    Button:
        background_color: (0, 0, 0, 1)
        text: "MUTE"
        font_size: sp(15)
        size_hint: None, None
        size: dp(100), root.height/9
        pos: root.width - self.size[0], 0
        id: mute_button
        on_release:
            app.mute_sound()

    Button:
        background_color: (0, 0, 0, 1)
        text: "PAUSE"
        font_size: sp(15)
        size_hint: None, None
        size: dp(100), root.height/9
        pos: 0, 0
        id: pause_button
        disabled: True
        on_release:
            app.pause_game()

    StickMan:
        source: "assets/runin/1.png"
        size_hint: None, None
        size: 182*root.height/5/211, root.height/5
        pos: -200, 60
        id: stickman
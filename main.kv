#:include pipe.kv

FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "assets/sky.png"

            Rectangle:
                size: self.width, 60
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture

    Label:
        id: score
        color: "black"
        size_hint_y: None
        height: 3*2*root.height/4
        text: "0"
        font_size: 40

    Label:
        id: lifes
        color: "white"
        size_hint_y: None
        height: 60
        text: "LIFES: 2"
        font_size: 20


    Button:
        background_color: (0, 0, 0, 1)
        text: "PLAY"
        font_size: dp(25)
        size_hint: 1/8, 1/13.5
        pos: root.center[0] - self.size[0]/2, root.center[1]
        id: start_button
        on_release:
            self.disabled = True
            self.opacity = 0
            app.start_game()
    StickMan:
        source: "assets/runin/1.png"
        size_hint: None, None
        size: 182*root.height/5/211, root.height/5
        pos: -200, 60
        id: stickman
